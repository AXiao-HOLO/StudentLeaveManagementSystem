<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.student.mapper.LeaveApplicationMapper">

    <resultMap id="BaseResultMap" type="com.student.domain.LeaveApplication">
            <id property="id" column="id" />
            <result property="studentId" column="student_id" />
            <result property="startTime" column="start_time" />
            <result property="endTime" column="end_time" />
            <result property="leaveType" column="leave_type" />
            <result property="reason" column="reason" />
            <result property="status" column="status" />
            <result property="createTime" column="create_time" />
            <result property="updateTime" column="update_time" />
            <result property="approveRemark" column="approve_remark" />
    </resultMap>

    <sql id="Base_Column_List">
        id,student_id,start_time,end_time,leave_type,reason,
        status,create_time,update_time,approve_remark
    </sql>
    <select id="selectLeaveApplication" resultType="com.student.domain.LeaveApplication">
        <!-- 查询所有请假申请信息（关联学生和班级） -->
        select
        la.*,
        s.name as studentName,
        s.student_no as studentNo,
        c.class_name as className
        from leave_application as la
        left join student as s on la.student_id = s.id
        left join clazz as c on s.class_id = c.id
        <where>
            <!-- 请假单ID模糊查询 -->
            <if test="id != null">
                and la.id like concat('%',#{id},'%')
            </if>
            <!-- 学生ID模糊查询 -->
            <if test="studentId != null">
                and la.student_id like concat('%',#{studentId},'%')
            </if>
            <!-- 学生姓名模糊查询 -->
            <if test="studentName != null and studentName != ''">
                and s.name like concat('%',#{studentName},'%')
            </if>
            <!-- 学号模糊查询 -->
            <if test="studentNo != null and studentNo != ''">
                and s.student_no like concat('%',#{studentNo},'%')
            </if>
            <!-- 班级名称模糊查询 -->
            <if test="className != null and className != ''">
                and c.class_name like concat('%',#{className},'%')
            </if>
            <!-- 请假类型模糊查询 -->
            <if test="leaveType != null and leaveType != ''">
                and la.leave_type like concat('%',#{leaveType},'%')
            </if>
            <!-- 请假事由模糊查询 -->
            <if test="reason != null and reason != ''">
                and la.reason like concat('%',#{reason},'%')
            </if>
            <!-- 审批状态精准查询 -->
            <if test="status != null">
                and la.status = #{status}
            </if>
            <!-- 审批备注模糊查询 -->
            <if test="approveRemark != null and approveRemark != ''">
                and la.approve_remark like concat('%',#{approveRemark},'%')
            </if>
        </where>
        <!-- 按请假类型排序 -->
        order by la.leave_type asc
    </select>
</mapper>
